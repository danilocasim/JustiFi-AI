<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Call Summary & Action Plan</title>
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Formal + Modern Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <style>
      body {
        font-family: "Inter", sans-serif;
      }

      .section-title {
        @apply text-lg font-semibold text-gray-900;
      }

      .card {
        @apply bg-white rounded-xl shadow-sm border border-gray-200  transition hover:shadow-md;
      }

      .card-header {
        @apply flex items-start gap-3 mb-3;
      }

      .subtext {
        @apply text-sm text-gray-600;
      }

      h1,
      h2,
      h3 {
        letter-spacing: -0.3px;
      }

      .highlight-label {
        @apply bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-xs font-medium;
      }
    </style>
  </head>

  <%- include("partials/navbar") %>

  <body class="bg-gray-50 px-3">
    <div class="min-h-screen p-6 mx-0  lg:mx-40">
      <div class="max-w-7xl  container space-y-8">
        <!-- Header -->
        <div class="border-b pb-6">
          <h1 class="text-4xl font-bold text-gray-900 mb-3 tracking-tight">
            Call Summary & Action Plan
          </h1>

          <div class="flex items-center gap-4 text-sm text-gray-700">
            <span class="highlight-label"><%= session.category %></span>
            <span class="text-gray-500">Session ID:</span>
            <span class="font-medium text-gray-800"
              ><%= session.sessionid || session.sessionId %></span
            >
          </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Left Column -->
          <div class="lg:col-span-2 space-y-3">
            <!-- Situation -->
            <div class="card bg-white shadow-md rounded-xl p-6 border border-gray-200 
    hover:shadow-lg transition-shadow duration-200">
              <div class="card-header ">
                <div class="text-blue-600">
                  <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 32 32"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M2 23h10v3.59L16.29 23H28V3H2v20z"
                    />
                  </svg>
                </div>
                <div>
                  <h2 class="section-title text-lg font-semibold text-gray-800 mb-2">Your Situation</h2>
                  <p class="subtext">A formal summary of your reported issue</p>
                </div>
              </div>

              <% if (summary && summary.situation) { %>
              <p class="text-gray-700 leading-relaxed whitespace-pre-line">
                <%= summary.situation %>
              </p>
              <% } else { %>
              <p class="text-gray-600 italic">
                Summary is being generated… Please wait.
              </p>
              <% } %>
            </div>

            <!-- Relevant Laws -->
            <div class="card bg-white shadow-md rounded-xl p-5 border border-gray-200 
    hover:shadow-lg transition-shadow duration-200">
              <div class="card-header">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentcolor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0m6 7l3 9m6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0m18 7l3 9m-3-9l-6-2m0-2v2m0 16v5m0 16h9m3 0h3"></path>
              </svg>
                <div>
                  <h2 class="section-title text-lg font-semibold text-gray-800 mb-2">Relevant Laws</h2>
                  <p class="subtext">Philippine laws applicable to your case</p>
                </div>
              </div>
              <br />
              <% if (summary && Array.isArray(summary.relevantLaws) &&
              summary.relevantLaws.length > 0) { %>
              <ul class="space-y-3">
                <% summary.relevantLaws.forEach(function(law) { %>
                <li
                  class="border-l-4 border-blue-600 pl-4 text-gray-800 font-medium"
                >
                  <%= law %>
                </li>
                <% }); %>
              </ul>
              <% } else { %>
              <p class="text-gray-600 italic">No relevant laws identified.</p>
              <% } %>
            </div>

            <!-- Recommended Steps -->
            <div class="card bg-white shadow-md rounded-xl p-6 border border-gray-200 
    hover:shadow-lg transition-shadow duration-200">
              <div class="card-header">
                <svg
                  class="w-6 h-6 text-green-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12h6m-6 4h6..."
                  />
                </svg>
                <div>
                  <h2 class="section-title text-lg font-semibold text-gray-800 mb-2 ">Recommended Action Steps</h2>
                  <p class="subtext">Clear steps to help you move forward</p>
                </div>
              </div>
              <br />

              <% if (summary && summary.recommendedSteps &&
              summary.recommendedSteps.length) { %>
              <ol class="list-decimal pl-5 space-y-3 text-gray-700">
                <% summary.recommendedSteps.forEach(step => { %>
                <li><%= step %></li>
                <% }) %>
              </ol>
              <% } else { %>
              <p class="text-gray-600 italic">No actionable steps available.</p>
              <% } %>
            </div>

            <!-- Red Flags -->
            <div class="card bg-white shadow-md rounded-xl p-6 border border-gray-200 
    hover:shadow-lg transition-shadow duration-200">
              <div class="card-header">
                <svg
                  class="w-7 h-7 text-red-600 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 9v2..."
                  />
                </svg>

                <div>
                  <h2 class="text-lg font-semibold text-gray-800 mb-2 section-title">
                    Red Flags to Watch For
                  </h2>
                  <p class="text-sm text-slate-600 mt-1">
                    Signs that require caution or escalation
                  </p>
                </div>
              </div>

              <% if (summary?.watchOutFor?.length) { %>
              <ul class="p-2 space-y-3">
                <% summary.watchOutFor.forEach(warning => { %>
                <li
                  class="text-red-700 font-medium leading-relaxed flex items-start gap-2"
                >
                  <span class="text-red-600 text-lg">•</span>
                  <span><%= warning %></span>
                </li>
                <% }) %>
              </ul>
              <% } %>
            </div>
          </div>

          <!-- Right Column -->
          <div class="space-y-8">
            <!-- Quick Actions -->
            <div class="card">
              <h2 class="section-title mb-4">Quick Actions</h2>

              <div class="space-y-3">
                

                <a
                  href="/call"
                  class="w-full block border border-gray-300 bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-lg flex items-center justify-center gap-2 transition"
                >
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path d="M3 5a2 2 0..." />
                  </svg>
                  Start a New Call
                </a>
              </div>
            </div>

            <!-- Immediate Action -->
            <% if (summary && summary.nextAction) { %>
            <div
              class="bg-yellow-50 border-l-4 border-yellow-500 p-6 rounded-lg shadow-sm"
            >
              <h2 class="text-lg font-semibold text-yellow-800 mb-2">
                Immediate Action Required
              </h2>
              <p class="text-gray-800 leading-relaxed">
                <%= summary.nextAction %>
              </p>
            </div>
            <% } %>

            <!-- Contacts -->
            <div class="card">
              <h2 class="section-title mb-4">Important Contacts</h2>

              <% if (summary && summary.contacts &&
              Object.keys(summary.contacts).length > 0) { %>
              <div class="space-y-4">
                <% for (const [key, value] of Object.entries(summary.contacts))
                { %>
                <div>
                  <h3 class="font-semibold text-gray-900">
                    <%= key.replace(/_/g, " ").toUpperCase() %>
                  </h3>
                  <p class="text-sm text-gray-700"><%= value %></p>
                </div>
                <% } %>
              </div>
              <% } else { %>
              <p class="text-gray-600 italic">
                No contact information available.
              </p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Report Generator Script -->
    <script>
      const summary = <%- JSON.stringify(summary || {}) %>;

      async function generateReport() {
        const sessionId = "<%= session.sessionId || session.sessionid %>";

        if (!summary || !summary.situation) {
          alert("Summary is still being generated. Please wait.");
          return;
        }

        try {
          const response = await fetch("/api/report/generate", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
              sessionId,
              reportType: "INCIDENT",
              templateData: {
                category: "<%= session.category %>",
                userName: "User",
                respondentName: "Respondent",
                incidentDate: new Date().toLocaleDateString("en-PH"),
                details: summary.situation,
                relevantLaws: summary.relevantLaws || [],
                recommendedSteps: summary.recommendedSteps || [],
                watchOutFor: summary.watchOutFor || [],
                contacts: summary.contacts || {},
                nextAction: summary.nextAction || ""
              }
            })
          });

          const report = await response.json();
          if (report.fileUrl) window.open(report.fileUrl, "_blank");
          else alert("Report generated but no file returned.");
        } catch (err) {
          alert("Error generating report.");
          console.error(err);
        }
      }
    </script>
  </body>
</html>
  